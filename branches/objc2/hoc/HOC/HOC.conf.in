name:               HOC
maintainer:         wolfgang.thaller@gmx.net
exposed:            True

exposed-modules:
    HOC,
    HOC.SelectorNameMangling,
    HOC.Arguments,
    HOC.FFICallInterface,
    HOC.StdArgumentTypes,
    HOC.TH,
    HOC.DeclareClass,
    HOC.ID,
    HOC.Class,
    HOC.DeclareSelector,
    HOC.SelectorMarshaller,
    HOC.Base,
    HOC.NewlyAllocated,
    HOC.Invocation,
    HOC.MsgSend,
    HOC.Utilities,
    HOC.ExportClass,
    HOC.NewClass,
    HOC.Super,
    HOC.CEnum,
    HOC.NameCaseChange,
    HOC.Dyld,
    HOC.ExternConstants,
    HOC.Exception,
    HOC.ExternFunctions,
    HOC.Unicode,
    HOC.Selectors,
    HOC.THDebug,
    HOC.CannedCIFs

hs-libraries:       "HOC", "HOC_cbits"
depends:            base, template-haskell, unix

#if GNUSTEP
extra-libraries:    "gnustep-base", "objc" PKG_EXTRA_LIBS
#else
extra-libraries:    "objc" PKG_EXTRA_LIBS
frameworks:         Foundation
#endif

#if INPLACE
import-dirs:        "../HOC/build/imports"
library-dirs:       "../HOC"
                    "../HOC_cbits"
                    FOUNDATION_LIB_DIRS
                    FFI_LIB_DIRS
#else
import-dirs:        GHC_LIB_PATH/HOC/imports
library-dirs:       GHC_LIB_PATH/HOC
                    FOUNDATION_LIB_DIRS
                    FFI_LIB_DIRS
#endif
