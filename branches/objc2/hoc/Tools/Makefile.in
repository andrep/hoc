include ../config.mk

dist_srcdir = Tools
dist_FILES = \
	HOCWrap.hs \
	Makefile.in \
	$(NULL)

all: hocwrap

hocwrap: *.hs
	mkdir -p build/hocwrap
	$(GHC) --make HOCWrap.hs	\
		-fglasgow-exts	\
		-o hocwrap	\
		-odir build/hocwrap -hidir build/hocwrap	\
		-package-conf ../inplace.conf

clean:
	rm -rf hocwrap build

install: install-files
	
install-files: all
	mkdir -p "$(destdir)"/$(bindir)
	install -s hocwrap "$(destdir)"/$(bindir)

