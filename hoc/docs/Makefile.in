include ../config.mk

dist_srcdir = docs
dist_FILES = \
	$(SOURCE_PODS) \
	Makefile.in \
	HOC.html \
	$(NULL)

TITLE = HOC: a Haskell to Objective-C bridge

SOURCE_PODS = Introduction.pod \
	      Quick_Start.pod \
	      Mapping_Types.pod \
	      Accessing_Core_Frameworks.pod \
	      Accessing_Other_Frameworks.pod \
	      Creating_an_Objective-C_Class_in_Haskell.pod \
	      History.pod \
	      Appendices.pod \
	      $(NULL)

SOURCE_DOTS = \
	      $(NULL)

# ---

SOURCE_PNGS = \
	      $(NULL)

all: HOC.html

%.png: %.dot
	$(DOT) -Tpng

HOC.html: $(SOURCE_PODS) $(SOURCE_PMGS)
	$(POD2HTML) \
	  --index \
	  --header \
	  --title="${TITLE}" \
	  --outfile "$@" \
	  $+

view: HOC.html
	open $+

dist: HOC.html

clean:
	-rm HOC.html pod2htm*

